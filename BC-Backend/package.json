{
  "name": "bc-backend",
  "version": "1.0.0",
  "description": "Cosmetic formulation batch calculator API",
  "main": "server.js",
  "scripts": {
    "test": "jest --runInBand --forceExit",
    "test:verbose": "jest --runInBand --forceExit --verbose",
    "start": "nodemon server.js",
    "dbinit": "psql -U postgres -f db/schema.sql",
    "dbseed": "psql -U postgres -d batch_calculator_db -f db/seed.sql",
    "dbsetup": "npm run dbinit && npm run dbseed",
    "db:test:setup": "psql -U postgres -c 'DROP DATABASE IF EXISTS batch_calculator_test_db;' && psql -U postgres -c 'CREATE DATABASE batch_calculator_test_db;' && psql -U postgres -d batch_calculator_test_db -f db/tables.sql"
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": ["**/__tests__/**/*.test.js"],
    "testTimeout": 10000
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "nodemon": "^3.1.11",
    "pg-promise": "^12.3.0",
    "uuid": "^13.0.0"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "jest": "^30.2.0",
    "supertest": "^7.2.2"
  }
}
